:: default : echo "DEFAULT" > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: run @ : echo "LAUNCH"  > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: stack @ : echo "STACK"   > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: resize @ : echo "RESIZE"  > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: place @ : echo "PLACE"   > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: warp @ : echo "WARP"    > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: ins @ : echo "INSERT"  > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed
:: float @ : echo "FLOAT"  > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed 
:: settings @ : echo "SETTINGS" > ~/.config/skhd/currentMode.txt; sketchybar --trigger mode_was_changed

shift + alt - l ; run
ins < shift + alt - l ; run
run < s ; settings
shift + alt - s ; stack
resize, place, warp, ins, float < shift+ alt - s ; stack
shift + alt - r ; resize
stack, place, warp, ins, float < shift + alt - r ; resize
shift + alt - p ; place
stack, resize, warp, ins, float < shift + alt - p ; place
shift + alt - w ; warp
stack, resize, place, ins, float < shift + alt - w ; warp
shift + alt - i ; ins
stack, resize, place, warp, float < shift + alt - i ; ins
shift + alt - f ; float
stack, resize, place, warp, ins < shift + alt - f ; float

ins, warp, place, resize, stack, run, float, settings < escape ; default # disable any mode

# Restart yabai, SKHD, sketchybar
run < shift - r : skhd -k escape; yabai --restart-service; skhd --restart-service
# Kitty
alt + shift - return : open -a Kitty -n # run Kitty
# Brave Browser
alt + shift - b : open -a Brave\ Browser -n; skhd -k escape
# Brave Browser in incognito
run < shift - b : open -a Brave\ Browser -n --args -incognito; skhd -k escape
# Kitty instance as editor
alt + shift - e : kitty -e zsh -c "cd ~/Developer && nvim ."
# Finder
# run < f : open -a Finder; skhd -k escape # open Finder
run < f : skhd -k escape; kitty -e zsh -c "cd ~ && mc -u"

run < shift - s : open "x-apple.systempreferences:com.apple.preference"; skhd -k escape #open System Preferences
run < a : skhd -k escape; ~/.config/skhd/soundSource.sh
settings < n : open -b com.apple.systempreferences /System/Library/PreferencePanes/Network.prefPane; skhd -k escape
settings < k : open -b com.apple.systempreferences /System/Library/PreferencePanes/Keyboard.prefPane; skhd -k escape
settings < b : open -b com.apple.systempreferences /System/Library/PreferencePanes/Bluetooth.prefPane; skhd -k escape
settings < s : open -b com.apple.systempreferences /System/Library/PreferencePanes/Security.prefPane; skhd -k escape
settings < d : open -b com.apple.systempreferences /System/Library/PreferencePanes/Displays.prefPane; skhd -k escape
settings < w : open -b com.apple.systempreferences /System/Library/PreferencePanes/DesktopScreenEffectsPref.prefPane; skhd -k escape
settings < a : open -b com.apple.systempreferences /System/Library/PreferencePanes/Sound.prefPane; skhd -k escape
cmd - 0x32 : ~/.config/skhd/showHideTerminal.sh #osascript ~/.config/skhd/hideShowTerminal.scpt

ctrl + shift - w : ~/.config/skhd/selectWindow.sh
ctrl + shift - s : ~/.config/skhd/search.sh
alt - r : ~/.config/skhd/openApp.sh

run < q : skhd -k escape; osascript -e 'tell application "System Events" to sleep'  # sleep

float < j : yabai -m window --grid 2:2:0:1:1:1
float < k : yabai -m window --grid 2:2:1:1:1:1
float < u : yabai -m window --grid 2:2:0:0:1:1
float < i : yabai -m window --grid 2:2:1:0:1:1
float < l : yabai -m window --grid 1:2:1:0:1:1
float < h : yabai -m window --grid 1:2:0:0:1:1
float < c : yabai -m window --grid 5:5:1:1:3:3
float < left : yabai -m window --move rel:-50:0
float < right : yabai -m window --move rel:50:0
float < up : yabai -m window --move rel:0:-50
float < down : yabai -m window --move rel:0:50
float < 0x1B : yabai -m window --resize bottom_right:-50:-50 
float < 0x18 : yabai -m window --resize bottom_right:50:50
float < shift - left : yabai -m window --resize right:-50:0
float < shift - right : yabai -m window --resize right:50:0
float < shift - up : yabai -m window --resize bottom:0:-50
float < shift - down : yabai -m window --resize bottom:0:50
float < f : yabai -m window --grid 1:1:0:0:1:1; skhd -k escape
# toggle float
float < t : yabai -m window --toggle float; skhd -k escape;

stack < h : yabai -m window --stack west # stack window with left window
stack < l : yabai -m window --stack east # stack window with right window
stack < j : yabai -m window --stack south # stack window with bot window
stack < k : yabai -m window --stack north #stack window with top window
# stack swap
meh - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first # swap to next stacked window
meh - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last # swap to prev stacked window

# increase right, decrease left
resize < h : yabai -m window --resize left:-50:0; yabai -m window --resize right:-50:0
# increase left, decrease right
resize < l : yabai -m window --resize right:50:0; yabai -m window --resize left:50:0
# increase top, decrease bot
resize < j : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
# increase bot, decrease top
resize < k : yabai -m window --resize top:0:-50; yabai -m window --resize bottom:0:-50

# equalize resize of windows
resize < b : yabai -m space --balance # equalize windows

# toggle gaps and padding
resize < shift - t : skhd -k escape; sh ~/.config/skhd/resize_padding.sh toggle 
resize < t : skhd -k escape; yabai -m space --toggle padding; yabai -m space --toggle gap 
resize < p : skhd -k escape; sh ~/.config/skhd/side_padding.sh
# toggle fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen; skhd -k escape 
# padding/gap change
resize < 0x18 : sh ~/.config/skhd/resize_padding.sh dec
resize < 0x1B : sh ~/.config/skhd/resize_padding.sh inc

# place window
place < h : yabai -m window --swap west # swap window with left window
place < j : yabai -m window --swap south # swap window with bottom window
place < k : yabai -m window --swap north # swap window with top window
place < l : yabai -m window --swap east # swap window with left window

# change space
#ctrl - 1 : yabai -m space --focus 1
#ctrl - 2 : yabai -m space --focus 2
#ctrl - 3 : yabai -m space --focus 3
#ctrl - 4 : yabai -m space --focus 4
#ctrl - 5 : yabai -m space --focus 5
#ctrl - 6 : yabai -m space --focus 6
#ctrl - 7 : yabai -m space --focus 7
#ctrl - 8 : yabai -m space --focus 8
#ctrl - 9 : yabai -m space --focus 9

#
# window to another display
place < n : yabai -m window --display next || yabai -m window --display first; \
					 yabai -m display --focus next || yabai -m display --focus first; \
					 skhd -k escape # move window on next monitor and focus it
place < p : yabai -m window --display prev || yabai -m window --display last; \
					 yabai -m display --focus prev || yabai -m display --focus last; \
					 skhd -k escape # move window on prev monitor and focus it
#
# rotate window
place < r : yabai -m space --rotate 270 # rotate windows against clockwise
place < shift - r : yabai -m space --rotate 90 # rotate window clockwise
#
# toggle split
place < t : yabai -m window --toggle split

# send window to desktop
place < 1 : yabai -m window --space 1; skhd -k escape; sketchybar --trigger send_window;
place < 2 : yabai -m window --space 2; skhd -k escape; sketchybar --trigger send_window;
place < 3 : yabai -m window --space 3; skhd -k escape; sketchybar --trigger send_window;
place < 4 : yabai -m window --space 4; skhd -k escape; sketchybar --trigger send_window;
place < 5 : yabai -m window --space 5; skhd -k escape; sketchybar --trigger send_window;
place < 6 : yabai -m window --space 6; skhd -k escape; sketchybar --trigger send_window;
place < 7 : yabai -m window --space 7; skhd -k escape; sketchybar --trigger send_window;
place < 8 : yabai -m window --space 8; skhd -k escape; sketchybar --trigger send_window;
place < 9 : yabai -m window --space 9; skhd -k escape; sketchybar --trigger send_window;

# insert mode
ins < h : yabai -m window --insert west # select insert zone on left window side
ins < l : yabai -m window --insert east # ... right window side
ins < j : yabai -m window --insert south # ... bottom window side
ins < k : yabai -m window --insert north # ... top window side
ins < return : yabai -m window --insert stack # prepare window for stacking next window on it

warp < h : yabai -m window --warp west
warp < l : yabai -m window --warp east
warp < j : yabai -m window --warp south
warp < k : yabai -m window --warp north

# Window focus
alt - k : yabai -m window --focus north # focus on bottom window or stack
alt - j : yabai -m window --focus south # focus on top window or stack
alt - h : yabai -m window --focus west # focus on left window or stack
alt - l : yabai -m window --focus east # focus on right window or stack
alt - m : yabai -m window --focus mouse || yabai -m window --focus first # focus on something under mouse or last
alt - tab : yabai -m window --focus next || yabai -m window --focus first
resize, place, ins, warp, stack < alt - k : yabai -m window --focus north
resize, place, ins, warp, stack < alt - j : yabai -m window --focus south
resize, place, ins, warp, stack < alt - h : yabai -m window --focus west 
resize, place, ins, warp, stack < alt - l : yabai -m window --focus east 
# Display focus
alt - n : yabai -m display --focus next || yabai -m display --focus first # focuse next monitor
alt - p : yabai -m display --focus prev || yabai -m display --focus last # focus prev monitor
resize, place, ins, warp, stack < alt - n : yabai -m display --focus next || yabai -m display --focus first # focuse next monitor
resize, place, ins, warp, stack < alt - p : yabai -m display --focus prev || yabai -m display --focus last # focus prev monitor

shift + alt - m : ~/.config/skhd/changeYabaiMode.sh
